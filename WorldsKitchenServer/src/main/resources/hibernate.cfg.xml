<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:h2:mem:kitchendb</property>
        <property name="hibernate.connection.username">user</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.current_session_context_class">thread</property>


        <mapping class="com.sigma.worldskitchenserver.model.Dish"/>
        <mapping class="com.sigma.worldskitchenserver.model.User"/>
        <mapping class="com.sigma.worldskitchenserver.model.Comment"/>
        <mapping class="com.sigma.worldskitchenserver.model.Ingredient"/>
    </session-factory>
</hibernate-configuration>